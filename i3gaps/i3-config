# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
new_window pixel 1
new_float normal

# Hide borders
hide_edge_borders none

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:Roboto 8

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Keybinding 

# Screen brightness controls
# bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
# bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"

# Move to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4

# Move active container to workspace
bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4

# Move active container to workspace and focus
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4

# Move between workspaces
bindsym $mod+Ctrl+Left workspace prev
bindsym $mod+Ctrl+Right workspace next

# Gaps (only current workspace)
bindsym $mod+g gaps inner current minus 5
bindsym $mod+Ctrl+g gaps inner current plus 5

# Screenshot
bindsym Print exec --no-startup-id scrot
bindsym $mod+Print --release exec --no-startup-id scrot -w
bindsym $mod+Ctrl+Print --release exec --no-startup-id scrot -s

# Composite manager
bindsym $mod+p exec --no-startup-id picom -b
bindsym $mod+Ctrl+p exec --no-startup-id pkill picom
bindsym $mod+Shift+p exec --no-startup-id "pkill picom; picom -b; exec notify-send 'restart picom'"

# Notification manager
bindsym $mod+n --release exec "killall dunst; dunst; exec notify-send 'restart dunst'"

# i3 config
bindsym $mod+r reload
bindsym $mod+Ctrl+r restart
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Ctrl+f exec --no-startup-id "i3increase-font"; restart; exec notify-send 'i3 font increased'
bindsym $mod+Ctrl+d exec --no-startup-id "i3increase-font -1"; restart; exec notify-send 'i3 font decreased'

# i3 tiling
bindsym $mod+f fullscreen toggle
bindsym $mod+h split h;exec notify-send 'tile horizontally'
bindsym $mod+v split v;exec notify-send 'tile vertically'
bindsym $mod+q split toggle
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+Shift+t layout toggle split

# Close container
bindsym $mod+x kill

# Resize container
bindsym $mod+Shift+d exec --no-startup-id i3resize down
bindsym $mod+Shift+l exec --no-startup-id i3resize left
bindsym $mod+Shift+r exec --no-startup-id i3resize right
bindsym $mod+Shift+u exec --no-startup-id i3resize up

# Move container
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right

# Floating mode
bindsym $mod+Shift+f floating toggle
bindsym $mod+Shift+s sticky toggle

# Focus container
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Left focus left
bindsym $mod+Right focus right

# Screen
bindsym $mod+l exec --no-startup-id blurlock
bindsym $mod+d exec --no-startup-id dmenu_run

# Program
#bindsym $mod+F  exec
bindsym $mod+F1  exec chrome
bindsym $mod+F2  exec idea

bindsym $mod+Return exec xterm
bindsym $mod+w exec chrome

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, (s)uspend, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Workspace names
# to display names or symbols instead of plain workspace numbers you can use
# something like: set $ws1 1:mail
#                 set $ws2 2:ï‚¬
set $ws1 1:dev@1
set $ws2 2:dev@2
set $ws3 3:web@3
set $ws4 4:other@4

# Open applications on specific workspaces
# Workspace 3
assign [class="(?i)chromium"] $ws3

# Open specific applications in floating mode
# for_window [class="(?i)System-config-printer.py"] floating enable border normal
# for_window [class="Xfburn"] floating enable

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# set a fat border
for_window [class="^.*"] border pixel 5

# define default container layout per workspace
# for_window [workspace=5] layout tabbed split 

# Autostart applications
# exec --no-startup-id application
# You switch between layouts by pressing "left CTRL + right CTRL".
exec --no-startup-id "setxkbmap -layout it,de -option grp:ctrls_toggle"
exec --no-startup-id xautolock -time 10 -locker blurlock

# background $term_background
# Same logic applied to everything else.
set_from_resource $term_background background
set_from_resource $term_foreground foreground
set_from_resource $term_color0     color0
set_from_resource $term_color1     color1
set_from_resource $term_color2     color2
set_from_resource $term_color3     color3
set_from_resource $term_color4     color4
set_from_resource $term_color5     color5
set_from_resource $term_color6     color6
set_from_resource $term_color7     color7
set_from_resource $term_color8     color8
set_from_resource $term_color9     color9
set_from_resource $term_color10    color10
set_from_resource $term_color11    color11
set_from_resource $term_color12    color12
set_from_resource $term_color13    color13
set_from_resource $term_color14    color14
set_from_resource $term_color15    color15

# class                 border  bground text    indicator child_border
client.focused          #282828 #282828 #282828 #cf6a4c   #cf6a4c
client.background       #282828

bar {
    colors {
        background #282828
        statusline #ffffff
        separator  #282828
        focused_workspace  #282828 #282828 #cf6a4c
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }
    position top
    status_command i3bar-conky
}

#############################
### settings for i3-gaps: ###
#############################

# Set inner/outer gaps
gaps inner 14
gaps outer -2

# Additionally, you can issue commands with the following syntax. This is useful to bind keys to changing the gap size.
# gaps inner|outer current|all set|plus|minus <px>
# gaps inner all set 10
# gaps outer all plus 5

# Smart gaps (gaps used if only more than one container on the workspace)
# smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace) 
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
# smart_borders on
